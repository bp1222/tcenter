html, body {
	padding: 0px;
	margin: 0px;
	font-size: .87em;
	background: #f3f2e2;
	height: 100%;
	font-family: Arial, Helvetica, sans-serif;
}

h2 {
	margin-bottom: 0px;
}

a {
	cursor: pointer;
}

/************************
 * Main Content Wrapper *
 ***********************/
#contentWrapper {
	padding-bottom: 9em;
}

#footer {
	position: relative;
	text-align: center;
	clear: both;
	margin-top: -7.5em
}

/**********************
 * Header CSS Content *
 *********************/
#topbar{
	position: relative;
	height:80px;
	background:#004479;
	color:#444444;
}

#headerbar { 
	background:#4F6BA0;
	width:100%;
    position: absolute;
    top: 60px;
    height:20px;
}

#header {
	height:80px;
    width:405px;
	left: 0px;
	top: 0px;
    z-index: 150;
	background:#004479;
	clear:right;
	font-family:Arial, Helvetica, sans-serif;
	color:#FFF;
	position: absolute;
}

#adminNav {
	position: absolute;
	top: 1px;
	right: 3px;
	font-size: .94em;
}

#adminNav a {
	font-weight:bold;
	color:white;
}

#authUser {
	position: absolute;
	top: 62px;
	right: 3px;
	z-index: 150;
	font-weight:bold;
	color: #ffffff;
}

#mainContent {
	margin-top: 20px;
}

/*********************
 * Content CSS Style *
 ********************/
.box {
	display: block;
	border-radius: 10px;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	margin: 0 auto;
	margin-bottom: 10px;
	padding: 5px;
	background:#e0cb6d;
	border: 2px solid #BF9860;
}

.boxHeader {
	text-align: center;
	color: #444444;
	border-bottom: 4px solid #99a97a;
	font-size: 1.5em;
}

.boxHeader a {
	text-decoration: none;
	color: #444444;
}

.expanded {
	background: top left no-repeat;
	background-image: url( ../images/expanded.png);
}

.collapsed {
	background: top left no-repeat;
	background-image: url( ../images/collapsed.png);
}

.boxContent {
	margin: 8px;
}

.boxContent a {
	text-decoration: none;
	color: #4F6BA0;
	font-size: 1.2em;
	font-weight: bold;
}

.boxEntry {
	display: block;
	border-bottom: 2px solid #99a97a;
	padding-bottom: 3px;
	margin-top: 3px;
}

/**************************
 * TicketList CSS Content *
 *************************/
#ticketListContainer {
	margin: 0 auto;
	width: 790px;
}

.listColumn1 {
	float:left;
	width: 250px;
	margin-right: 20px;
}

.listColumn2 {
	float: left;
	width: 250px;
	margin-right: 20px;
}

.listColumn3 {
	float: left;
	width: 250px;
}

/*******************
 * Ticket Page CSS *
 ******************/
#ticketContainer {
	width: 1000px;
}

.ticketColumn1 {
	width: 280px;
	float: left;
	margin-left: 20px;
}

.ticketColumn2 {
	width: 620px;
	float: left;
	margin-left: 20px;
	margin-right: 0;
}

.password {
	font-weight: bolder;
	width: 180px; 
	float: right; 
	margin-right: 30px;
}

.ticketNumber{
	font-weight: bolder;
	width: 180px;
	float: left;
	margin-left: 30px;
}

.ticketContent {
	clear: both;
	display: block;
	width: 100%;
}

.tlNumber {
	font-weight: bolder;
}

.tlSummary, .tlLastUpdate, .tlLastRcc, .tlCreated {
	font-size: .9em;
}

.tlLastRcc {
	float: right;
}

.tUpdate {
	display: block;
}

.tUpdateDate {
	display: block;
	font-weight: bold;
}

.toDo {
	margin-left: 100px;
	width: 498px;
}

.todoCol1 {
	float: left;
	width: 230px;
}

.todoCol2 {
	float: left;
	width: 230px;
}

/**********************
 * CSS Tables Content *
 *********************/
table {
	display: table;
	vertical-align: top;
}

td {
	vertical-align: top;
	min-width: 90px;
}

/****************
 * Request Page *
****************/
.required{
	font-size: 1.2em;
	color: #DD1111;
}

fieldset {
	font-family: Times;
}

legend  {
	color: #666666;
	font-weight: bold;
	font-variant: small-caps;
	background: #d3d3d3;
	padding: 2px 6px;
	margin-bottom: 8px;
	font-family:Arial, Helvetica, sans-serif;
}

label {
	font-weight: bold;
	line-height: normal;
	margin-right: 10px;
	position: relative;
	display: block;
	float: left;
}

.fLblLogin
{
	width: 70px;
	height: 10px; 
	margin-top: .3em;
	text-align: right;
}

.fLblRequest
{
	width: 125px;
	height: 10px; 
	margin-top: .3em;
	text-align: right;
}

.fLblTicket {
	padding: 2px;
	margin-bottom: 5px;
}

.smalltext{
	font-size: .8em;
}

input {
	color: #333333;
	padding: 2px;
	margin-right: 5px;
	margin-bottom: 5px;
}

.reportResult{
	width: 350px;
    float: right;
    margin-right: 20%;
}

.reportDate {
	width: 250px; 
	margin-left: 200px;
	margin-bottom: 50px;
}

